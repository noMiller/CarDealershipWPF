<Page x:Class="WpfApp4.Pages.Admin.ADD.AddSellersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages.Admin.ADD"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddSellersPage" Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Добавить консультанта" FontSize="20" Margin="0 0 0 20"/>
            <TextBlock Text="ФИО"/>
            <TextBox x:Name="FIOTextBox"/>
            <TextBlock Text="Должность"/>
            <TextBox x:Name="JobTitle"/>
            <TextBlock Text="ID аккаунта"/>
            <TextBox x:Name="IDAccTextBox"/>
            <Button x:Name="AddSellerButton" Click="AddSellerButton_Click" Content="Добавить консультанта" Margin="0 20 0 0" Height="30"/>
        </StackPanel>
    </Grid>
</Page>
