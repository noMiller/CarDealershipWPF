<Page x:Class="WpfApp4.Pages.Admin.ADD.AddAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages.Admin.ADD"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAccountPage" Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Добавить аккаунт" FontSize="25" Margin="0 0 0 10"/>
            <TextBlock Text="Логин"/>
            <TextBox x:Name="LoginTextBox"/>
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="PasswordTextBox"/>
            <TextBlock Text="Роль"/>
            <ComboBox x:Name="RoleComboBox" Margin="0 0 0 10" DisplayMemberPath="title"/>
            <Button x:Name="AddAccButton" Click="AddAccButton_Click" Content="Добавить аккаунт" Height="30"/>
        </StackPanel>
    </Grid>
</Page>
