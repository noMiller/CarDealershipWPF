<Page x:Class="WpfApp4.Pages.Admin.ADD.AddClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages.Admin.ADD"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddClientPage">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Добавление клиента" FontSize="25" Margin="0 0 0 20"/>
            <TextBlock Text="ФИО"/>
            <TextBox x:Name="FIOTextBox"/>
            <TextBlock Text="ID аккаунта"/>
            <TextBox x:Name="IDuserTextBox"/>
            <Button x:Name="AddClientButton" Click="AddClientButton_Click" Content="Добавить пользователя" Margin="0 20 0 0" Height="30"/>
        </StackPanel>
    </Grid>
</Page>
