<Page x:Class="WpfApp4.Pages.Admin.ADD.AddCarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages.Admin.ADD"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCarPage" Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Добавить автомобиль" FontSize="20" Margin="0 0 0 20"/>
            <TextBlock Text="Модель"/>
            <TextBox x:Name="ModelTextBox"/>
            <TextBlock Text="Цена"/>
            <TextBox x:Name="PriceTextBox"/>
            <TextBlock Text="Описание"/>
            <TextBox x:Name="DesctiptionTextBox"/>
            <TextBlock Text="Фото (Ссылка)"/>
            <TextBox x:Name="PhotoTextBox"/>
            <TextBlock Text="Актуальность (Да/Нет)"/>
            <TextBox x:Name="IsActualTextBox"/>
            <TextBlock Text="Тип двигателя"/>
            <ComboBox x:Name="TypeEngineComboBox" DisplayMemberPath="title"/>

            <Button x:Name="AddCarButton" Click="AddCarButton_Click" Content="Добавить автомобиль" Height="30" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Page>
