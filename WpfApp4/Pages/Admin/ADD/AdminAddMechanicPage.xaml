<Page x:Class="WpfApp4.Pages.Admin.ADD.AdminAddMechanicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages.Admin.ADD"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminAddMechanicPage" Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock Text="Добавить механика" FontWeight="Bold" FontSize="20" Margin="0 0 0 20"/>
            <TextBlock Text="ФИО" FontSize="14"/>
            <TextBox x:Name="FIOTextBox"/>
            <TextBlock Text="Должность" Margin="0 10 0 0" FontSize="14"/>
            <TextBox x:Name="DoljnostTextBox"/>
            <TextBlock Text="ID пользователя" FontSize="14" Margin="0 10 0 0"/>
            <TextBox x:Name="UserIDTextBox"/>
            <Button x:Name="AddMechanicButton" Click="AddMechanicButton_Click" Content="Добавить механика" Margin="0 20 0 0" Height="30"/>
        </StackPanel>
    </Grid>
</Page>
