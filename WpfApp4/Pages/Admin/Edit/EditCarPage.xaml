<Page x:Class="WpfApp4.Pages.Admin.Edit.EditCarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages.Admin.Edit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditCarPage" Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Изменение автомобиля" FontSize="20" Margin="0 0 0 20"/>
            <TextBlock Text="Модель"/>
            <TextBox x:Name="ModelTextBox"/>
            <TextBlock Text="Цена"/>
            <TextBox x:Name="PriceTextBox"/>
            <TextBlock Text="Описание"/>
            <TextBox x:Name="Description"/>
            <TextBlock Text="Фото (Ссылка)"/>
            <TextBox x:Name="PhotoTextBox"/>
            <TextBlock Text="Актуальность (Да/Нет)"/>
            <TextBox x:Name="IsActualTextBox"/>
            <TextBlock Text="Тип двигателя"/>
            <ComboBox x:Name="TypeEngineComboBox" DisplayMemberPath="title"/>
            <Button x:Name="EditCarButton" Click="EditCarButton_Click" Content="Изменить" Margin="0 20 0 0" Height="30"/>
        </StackPanel>
    </Grid>
</Page>
