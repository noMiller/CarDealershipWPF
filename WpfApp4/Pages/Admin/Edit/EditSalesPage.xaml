<Page x:Class="WpfApp4.Pages.Admin.Edit.EditSalesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages.Admin.Edit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditSalesPage">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Изменить продажу" FontSize="25" Margin="0 0 0 20"/>
            <TextBlock Text="Клиент"/>
            <ComboBox x:Name="ClientComboBox" DisplayMemberPath="FIO"/>
            <TextBlock Text="Консультант"/>
            <ComboBox x:Name="SellerComboBox" DisplayMemberPath="FIO"/>
            <TextBlock Text="Автомобиль"/>
            <ComboBox x:Name="CarComboBox" DisplayMemberPath="Model"/>
            <TextBlock Text="Окончательная цена"/>
            <TextBox x:Name="CurrentPriceTextBox"/>
            <Button x:Name="EditSalesButton" Click="EditSalesButton_Click" Content="Изменить" Margin="0 10 0 0" Height="30"/>
        </StackPanel>
    </Grid>
</Page>
