<Page x:Class="WpfApp4.Pages.Users.UserAddZapisPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages.Users"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserAddZapisPage" Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Записаться на ремонт" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>
            <TextBlock Text="Машина:" FontSize="16"/>
            <TextBox x:Name="CarTextBox" Height="25"/>
            <TextBlock Text="Номер телефона для связи:" Margin="0 10 0 0" FontSize="16"/>
            <TextBox x:Name="CommunicationTextBox" Height="25"/>
            <Button x:Name="AddZapisButton" Click="AddZapisButton_Click" Content="Оставить заявку" Height="30" Margin="0 30 0 0"/>
        </StackPanel>
    </Grid>
</Page>
