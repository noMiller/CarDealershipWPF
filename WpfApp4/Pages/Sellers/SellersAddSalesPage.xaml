<Page x:Class="WpfApp4.Pages.Sellers.SellersAddSalesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages.Sellers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SellersAddSalesPage">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Добавить продажу" FontSize="25" Margin="0 0 0 20"/>
            <TextBlock Text="Выберите себя"/>
            <ComboBox x:Name="SellerComboBox" DisplayMemberPath="FIO"/>
            <TextBlock Text="Выберите клиента"/>
            <ComboBox x:Name="ClientsComboBox" DisplayMemberPath="FIO"/>
            <TextBlock Text="Выберите автомобиль"/>
            <ComboBox x:Name="CarsComboBox" DisplayMemberPath="Model"/>
            <TextBlock Text="Итоговая цена"/>
            <TextBox x:Name="CurrentPrice"/>
            <Button x:Name="AddSalesPage" Click="AddSalesPage_Click" Content="Добавить продажу" Margin="0 20 0 0" Height="30"/>
        </StackPanel> 
    </Grid>
</Page>
