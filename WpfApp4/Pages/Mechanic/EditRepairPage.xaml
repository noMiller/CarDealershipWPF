<Page x:Class="WpfApp4.Pages.Mechanic.EditRepairPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages.Mechanic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditRepairPage" Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Редактирование заявки" FontWeight="Bold" FontSize="20" Margin="0 0 0 30"/>
            <TextBlock Text="Описание работы" FontSize="14"/>
            <TextBox x:Name="CommentTextBox"/>
            <TextBlock Text="Конечная стоимость" Margin="0 10 0 0" FontSize="14"/>
            <TextBox x:Name="PriceTextBox"/>
            <TextBlock Text="Статус" Margin="0 10 0 0" FontSize="14"/>
            <ComboBox x:Name="StatusComboBox" DisplayMemberPath="title"/>
            <Button x:Name="ConfirmButton" Click="ConfirmButton_Click" Content="Подтвердить изменения" Margin="0 20 0 0" Height="30" FontWeight="Bold"/>

        </StackPanel>
    </Grid>
</Page>
